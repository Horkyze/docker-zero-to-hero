<h1>Todo List</h1>

<%= form_with(model: @todo, local: true) do |form| %>
  <%= form.text_field :title %>
  <%= form.submit "Add Todo" %>
<% end %>

<ul>
  <% @todos.each do |todo| %>
    <li>
      <%= todo.title %>
      <%= button_to "Delete", todo_path(todo), method: :delete %>
    </li>
  <% end %>
</ul>